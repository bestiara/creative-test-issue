{% extends 'main.html.twig' %}

{% block title %}{{ trailer.name }} {% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailer.title }}</h1>
        <div class="row">
            <div class="col-4">
                <img class="card-img-top" src="{{ trailer.image }}" alt="{{ trailer.title }}">
            </div>
            <div class="col-6">
                <p>{{ trailer.description }}</p>
                <a class="btn btn-primary" href="{{ trailer.link }}" target="_blank">
                    Источник
                </a>
            </div>
        </div>
        <a class="btn btn-secondary mt-4" href="javascript://" onclick="history.back();">Назад</a>
    </div>
{% endblock %}
